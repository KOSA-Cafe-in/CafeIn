<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cafein.menu.MenuMapper">

    <resultMap id="MenuResultMap" type="com.cafein.menu.MenuDTO">
        <id property="menuId" column="menu_id"/>
        <result property="name" column="name"/>
        <result property="content" column="content"/>
        <result property="price" column="price"/>
        <result property="menuPictureUrl" column="menu_picture_url"/>
        <result property="createdDate" column="create_date" javaType="java.util.Date"/>
        <result property="modifiedDate" column="modified_date" javaType="java.util.Date"/>
    </resultMap>

    <select id="findAll" resultMap="MenuResultMap">
        SELECT * FROM menu ORDER BY createdDate DESC
    </select>
</mapper>